<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edit_status"
    android:layout_gravity="center"
    android:padding="4dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_status_text"
        android:paddingBottom="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/edit_status_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edit_status_form"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setImageDescription"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/syndication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/tw_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/tw_check"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"/>


    </LinearLayout>

</LinearLayout>